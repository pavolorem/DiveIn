<resources>
    <!-- Base application theme. -->
    <style name="Theme.DiveInDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/divein_color</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ChangeLanguage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSurface">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="AlertDialogDark" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>